<UserControl
    x:Class="Matilda.Mirror.GUI.Music.CompleteMusicViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Matilda.Mirror.GUI.Music"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
  xmlns:currentdatetime="using:Matilda.Mirror.GUI.CurrentDateTime"
    xmlns:currentweather="using:Matilda.Mirror.GUI.New_Weather"
    xmlns:musiccontrol="using:Matilda.Mirror.GUI.Music">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <currentdatetime:DateTimeViewControl HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <currentweather:CurrentWeatherControl HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <musiccontrol:MusicViewControl Grid.Row="1" Margin="10,50,0,0"/>
    </Grid>
</UserControl>
