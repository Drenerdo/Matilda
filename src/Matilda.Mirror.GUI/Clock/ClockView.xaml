<Page
    x:Class="Matilda.Mirror.GUI.Clock.ClockView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Matilda.Mirror.GUI.Clock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{StaticResource clockViewModel}">

    <Grid Background="Black">
        <StackPanel VerticalAlignment="Top">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="{Binding Path=CurrentTime, FallbackValue=Time will be shown here}" Foreground="White" 
                />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="{Binding Path=CurrentDate, FallbackValue=Date will be shown here}" Foreground="White" 
                />
        </StackPanel>

        <StackPanel Margin="10,85,212,370">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14.667"
                Text="Notifications"
                Foreground="White"
                />
        </StackPanel>

        <StackPanel Margin="207,85,10,370">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14.667"
                Text="Music"
                Foreground="White"
                />
        </StackPanel>

        <StackPanel Margin="10,440,212,10">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14.667"
                Text="Amentities"
                Foreground="White"
                />
        </StackPanel>

        <StackPanel Margin="207,440,10,10">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14.667"
                Text="Closet"
                Foreground="White"
                />
        </StackPanel>



    </Grid>
</Page>