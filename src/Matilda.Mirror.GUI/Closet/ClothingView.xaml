<Page
    x:Class="Matilda.Mirror.GUI.Closet.ClothingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Matilda.Mirror.GUI.Closet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    Height="1920" Width="1080"
    DataContext="{StaticResource clockViewModel}">

    <Grid Background="Black">
        <StackPanel VerticalAlignment="Top">
            <TextBlock x:Name="CurrentTime"
                HorizontalAlignment="Center"
                FontSize="30"
                Text="{Binding Path=CurrentDate, FallbackValue=Date will be shown here}" Foreground="White" 
                />
            <TextBlock x:Name="CurrentDate"
                HorizontalAlignment="Center"
                FontSize="30"
                Text="{Binding Path=CurrentTime, FallbackValue=Time will be shown here}" Foreground="White" 
                />
        </StackPanel>
        
        <Grid Margin="10,138,609,44">
            <Image x:Name="image1" HorizontalAlignment="Left" Height="218" VerticalAlignment="Top" Width="151" Margin="35,39,0,0" Source="ms-appx:///Resources/Amentities/bathrobe.jpg" Stretch="Fill"/>
            <Image x:Name="image2" HorizontalAlignment="Left" Height="211" VerticalAlignment="Top" Width="180" Margin="249,214,0,0" Source="ms-appx:///Resources/Clothing/suit.jpg" Stretch="Fill"/>
            <Image x:Name="image3" HorizontalAlignment="Left" Height="227" VerticalAlignment="Top" Width="170" Margin="16,369,0,0" Source="ms-appx:///Resources/Clothing/jacket.jpg" Stretch="Fill"/>
            <Image x:Name="image5" HorizontalAlignment="Left" Height="249" VerticalAlignment="Top" Width="180" Margin="249,553,0,0" Source="ms-appx:///Resources/Clothing/dress.jpg" Stretch="Fill"/>
            <Image x:Name="image6" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="170" Margin="35,704,0,0" Source="ms-appx:///Resources/Clothing/jeans.jpg" Stretch="Fill"/>
        </Grid>



        <TextBlock x:Name="ItemLists" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Item List" Foreground="White" VerticalAlignment="Top" Margin="624,214,240,0" Width="512" TextAlignment="Center" FontSize="53.333" Height="85"/>

        <TextBlock x:Name="Brought" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Purchased" Foreground="Wheat" VerticalAlignment="Top" Margin="676,486,258,0" Width="146" TextAlignment="Center" FontSize="26.667"/>

        <TextBlock x:Name="Loved" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Favorite" Foreground="Wheat" VerticalAlignment="Top" Margin="676,718,258,0" Width="146" TextAlignment="Center" FontSize="26.667"/>







    </Grid>
</Page>
