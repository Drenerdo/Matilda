<Application
    x:Class="Matilda.Mirror.GUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Matilda.Mirror.GUI"
    xmlns:clock="using:Matilda.Mirror.GUI.Clock"
    xmlns:transit="using:Matilda.Mirror.GUI.Transit"
    xmlns:weather="using:Matilda.Mirror.GUI.Weather"
    RequestedTheme="Light">
    <Application.Resources>
        <clock:ClockViewModel x:Key="clockViewModel"/>
        <transit:TransitViewModel x:Key="transitViewModel"/>
        <weather:WeatherThisWeekViewModel x:Key="weatherThisWeekViewModel"/>
        <weather:WeatherTodayViewModel x:Key="weatherTodayViewModel"/>
    </Application.Resources>

</Application>
